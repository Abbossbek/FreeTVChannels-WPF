<materialDesign:Card  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                      x:Class="FreeTVChannels.Controls.ChannelCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeTVChannels.Controls"
             mc:Ignorable="d" UniformCornerRadius="10" Margin="5"
             d:DesignHeight="110" d:DesignWidth="110">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image Source="{Binding Path=Uri}" Height="60" Width="60"/>
        <TextBlock  Text="{Binding Path=Name}" TextWrapping="Wrap"/>
    </StackPanel>
</materialDesign:Card>
